<!DOCTYPE html>
%html
  %head
  %title Task Tracker
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags

%body
  %nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
    .container
      .navbar-header
        %button.navbar-toggle.collapsed{aria: {controls: "navbar", expanded: "false"}, data: {target: "#navbar", toggle: "collapse"}, type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: "#"} Task Tracker
      .navbar-collapse.collapse{id: "navbar"}
        %ul.nav.navbar-nav
          %li.active
            %a{href: root_path} Today's Dashboard
          %li
            %a{href: tasks_path} Tasks
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              System
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              %li
                %a{href: projects_path} Projects
              %li
                %a{href: deliverables_path} Deliverables
              %li
                %a{href: statuses_path} Statuses
              %li.divider
              %li.dropdown-header Nav header
              %li
                %a{href: "#"} Separated link
              %li
                %a{href: "#"} One more separated link
        %ul.nav.navbar-nav.navbar-right
          %li
            %a{href: "../navbar/"} Default
          %li
            %a{href: "../navbar-static-top/"} Static top
          %li.active
            %a{href: "./"}
              Fixed top
              %span.sr-only (current)
  .container
    .row
      = yield
